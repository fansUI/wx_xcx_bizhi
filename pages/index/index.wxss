.container{
  box-sizing: border-box;
  padding: 0 20rpx;
}
.nav_box{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  background-color: #fff;
  z-index: 99999;
}
.nav{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;

  position: absolute;
  left: 0;
  z-index: 99999;
}
.nav_share{
  width: 50px;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}
.nav_input{
  flex: 1;
  height: 100%;
}
.input{
  width: 100%;
  height: 100%;
  border-radius: 100px;
  background-color: #F3F3F3;
}
swiper{
  /* statusbarHeight20 + 48/44 */
  margin-top: 80px;
  width: 100%;
  height: 300rpx;
}
swiper-item,image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.types{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx 50rpx;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  font-size: 26rpx;
}
.hot{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.hot_top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-left: 4rpx solid #27A3FF;
  border-radius: 4rpx;
  padding-left: 16rpx;
}
.hot_title{
  font-size: 26rpx;
}
.hot_more{
  font-size: 20rpx;
  color: #999;
}
.hot_bottom{
  display: flex;
  justify-content: space-between;
  height: 180rpx;
  padding-top: 30rpx;
}
.hot_bottom view{
  width: 49%;
  background-size: 100% 100%;
  border-radius: 6rpx;
}
.circle{
  padding: 30rpx 0 20rpx;
}
.circle_title{
  border-left: 4rpx solid #27A3FF;
  border-radius: 4rpx;
  padding-left: 16rpx;  
  font-size: 26rpx;
}
scroll-view{
  width: 100%;
  margin-top: 20rpx;
  white-space: nowrap;
}
.scroll-view_item{
  display: inline-block;
  width: 30%;
  height: 130rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;

  text-align: center;
  line-height: 130rpx;
}
.scroll-view_item+.scroll-view_item{
  margin-left: 30rpx;
}
.scroll-view_item:nth-child(1){
  background-color: #369;
}
.news{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
}
.news view{
  padding: 10rpx 45rpx;
  border-radius: 32rpx;
}
.lists{
  display: flex;
  flex-wrap: wrap;
}
.lists view{
  width: 32%;
  height: 400rpx;
  background: green;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
}
.mr2{
  margin-right: 2%;
}











